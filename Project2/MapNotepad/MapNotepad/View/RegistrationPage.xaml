<?xml version="1.0" encoding="utf-8" ?>
<view:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:MapNotepad.View"
             x:Class="MapNotepad.View.RegistrationPage"
                      BackgroundColor="White"
                      Title="Log in">
    <view:BaseContentPage.Content>
        <StackLayout>
            <Label Text="Name" TextColor="#858E9E" Margin="28,0,0,0"/>
            <Entry x:Name="name" Placeholder="Enter your name" TextColor="#858E9E" Margin="16,0,16,0"/>
            <Label Text="Email" TextColor="#858E9E" Margin="28,0,0,0"/>
            <Entry x:Name="email" Placeholder="Enter email" TextColor="#858E9E" Margin="16,0,16,0"/>
            <Button x:Name="next" BackgroundColor="#596EFB" Text="Next" TextColor="White" Margin="16,0,16,0" Command="{Binding NextButtonTapCommand}" />
        </StackLayout>
    </view:BaseContentPage.Content>
</view:BaseContentPage>