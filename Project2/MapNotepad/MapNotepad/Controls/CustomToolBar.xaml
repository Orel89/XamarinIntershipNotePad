<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapNotepad.Controls.CustomToolBar"
             x:Name="customToolBar">
  <ContentView.Content>
      <StackLayout Orientation="Horizontal"
                   Padding="5,0,5,0">
            <ImageButton Source="LeftArrow.png"
                   HorizontalOptions="StartAndExpand"
                   WidthRequest="10"
                   HeightRequest="10"
                   BackgroundColor="Transparent"
                   Command="{Binding Button, Source={x:Reference customToolBar}}"/>
          
            <Label Text="{Binding Title, Source={x:Reference customToolBar}}"
                   TextColor="{Binding TitleColor, Source={x:Reference customToolBar}}"
                   HorizontalOptions="Center"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,15,0,15"
                   />
      </StackLayout>
  </ContentView.Content>
</ContentView>